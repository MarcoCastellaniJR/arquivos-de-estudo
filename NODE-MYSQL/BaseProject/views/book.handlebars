<div id="book-page">
    <a href="/books">Voltar</a>
    <div class="container">
        <input type="hidden" name="id" value="{{book.ID}}">
        <h1>{{book.title}}</h1>
        <p>Amout of pages: {{book.pagety}}.</p>
        <div class="actions">
            <a href="/books/edit/{{book.ID}}">Edit this book</a>
            <form action="/books/remove/{{book.ID}}" method="POST">
                <input type="submit" value="Delete">
            </form>
        </div>  
    </div>
</div>