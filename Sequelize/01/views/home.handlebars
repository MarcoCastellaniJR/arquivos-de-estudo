<h1>Usuários cadastrados</h1>
<div class="container">
    {{#each users}}
    <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}">Ver detalhes</a>
            <form action="/users/delete/{{this.id}}" method="POST">
            <input type="submit" value="Delete User" class="delete-btn"></form>
            <a href="/users/edit/{{this.id}}">Editar Usuário</a>
        </div>
    </div>
    {{/each}}
</div>
